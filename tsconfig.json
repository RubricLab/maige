{
	"compilerOptions": {
    "types": ["bun-types"],
		"baseUrl": ".",
		"paths": {
			"~/*": ["./lib/*"]
		},
		"plugins": [{"name": "next"}]
	},
	"exclude": ["node_modules"],
	"extends": "@rubriclab/typescript-config/nextjs",
	"include": [
		"./app/**/*.ts",
		"./app/**/*.tsx",
		"./lib/**/*.ts",
		"./lib/**/*.tsx",
		".next/types/**/*.ts",
		"next-env.d.ts"
	]
}
