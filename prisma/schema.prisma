generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "postgres"
  url          = env("DATABASE_URL")
  directUrl    = env("DB_URL_NON_POOL")
  relationMode = "prisma"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  userName      String?   @unique
  email         String?   @unique
  emailVerified DateTime?
  githubUserId  String?   @unique
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]

  stripeSubscriptionId String? @unique
  stripeCustomerId     String? @unique

  usage          Int      @default(0)
  totalUsage     Int      @default(0)
  usageLimit     Int      @default(30)
  usageUpdatedAt DateTime @default(now())
  usageWarned    Boolean  @default(false)

  projects        Project[]
  feedback        Feedback[]
  teams           Team[]
  memberships     Membership[]
  invitesSent     Invite[]      @relation("User_inviter")
  invitesAccepted Invite[]      @relation("User_invitee")
  instructions    Instruction[]
  addProject      AddProject[]
}

model Project {
  id              String   @id @default(cuid())
  githubProjectId String?  @unique
  slug            String?
  name            String?
  private         Boolean  @default(true)
  createdBy       String
  teamId          String
  organizationId  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  totalUsage     Int      @default(0)
  usageLimit     Int      @default(30)
  usageUpdatedAt DateTime @default(now())

  user         User          @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  team         Team          @relation(fields: [teamId], references: [id], onDelete: Cascade)
  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  runs         Run[]
  instructions Instruction[]

  @@index([createdBy])
  @@index([teamId])
  @@index([organizationId])
}

model Organization {
  id                   String   @id @default(cuid())
  githubOrganizationId String   @unique @default(cuid())
  name                 String?
  slug                 String?
  image                String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  projects Project[]
}

// This table tracks requests made by users to add projects to specific teams
model AddProject {
  id          String    @id @default(cuid())
  createdBy   String
  teamId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?

  user User @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([createdBy])
  @@index([teamId])
}

model Instruction {
  id                String   @id @default(cuid())
  projectId         String
  content           String   @db.VarChar(1000)
  creatorUsername   String?
  githubCommentLink String?
  createdBy         String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user    User    @relation(fields: [createdBy], references: [id], onDelete: Restrict)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([createdBy])
}

enum Status {
  in_progress
  completed
  failed
}

enum Model {
  gpt_3_turbo //GPT-3.5-turbo
  gpt_4_turbo_preview //GPT-4-turbo
}

enum Agent {
  labeler
  reviewer
  engineer
}

model Run {
  id         String    @id @default(cuid())
  issueNum   Int
  issueUrl   String    @db.Text
  projectId  String
  createdAt  DateTime  @default(now())
  finishedAt DateTime?
  status     Status    @default(in_progress)
  project    Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  logs       Log[]
  teamId     String
  team       Team      @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([projectId])
  @@index([issueNum])
}

model Log {
  id               String    @id @default(cuid())
  runId            String
  action           String
  agent            Agent
  model            Model
  status           Status    @default(in_progress)
  promptTokens     Int?
  completionTokens Int?
  totalTokens      Int?
  createdAt        DateTime  @default(now())
  finishedAt       DateTime?

  run Run @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@index([runId])
}

model Feedback {
  id        String   @id @default(cuid())
  createdBy String
  content   String   @db.Text
  createdAt DateTime @default(now())

  user User @relation(fields: [createdBy], references: [id], onDelete: Cascade)

  @@index([createdBy])
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? @db.Text
  refresh_token_expires_in Int?
  access_token             String? @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? @db.Text
  session_state            String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Team {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String?
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  creator     User         @relation(fields: [createdBy], references: [id], onDelete: Restrict)
  memberships Membership[]
  invites     Invite[]
  Project     Project[]
  addProject  AddProject[]
  runs        Run[]

  @@index([createdBy])
}

enum Role {
  USER
  ADMIN
}

model Membership {
  id        String   @id @default(cuid())
  userId    String
  teamId    String
  inviteId  String?  @unique
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  team   Team    @relation(fields: [teamId], references: [id], onDelete: Cascade)
  invite Invite? @relation(fields: [inviteId], references: [id], onDelete: SetNull)

  @@unique([userId, teamId]) // Composite uniqueness constraint to avoid duplicates
  @@index([userId])
  @@index([teamId])
  @@index([inviteId])
}

model Invite {
  id          String    @id @default(cuid())
  invitedBy   String
  email       String
  role        Role      @default(USER)
  teamId      String
  emailSentAt DateTime?
  acceptedBy  String?
  acceptedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  inviter    User        @relation("User_inviter", fields: [invitedBy], references: [id], onDelete: Cascade)
  invitee    User?       @relation("User_invitee", fields: [acceptedBy], references: [id])
  team       Team        @relation(fields: [teamId], references: [id], onDelete: Cascade)
  membership Membership?

  @@unique([email, teamId]) // Composite uniqueness constraint to avoid duplicates
  @@index([invitedBy])
  @@index([acceptedBy])
  @@index([teamId])
}
