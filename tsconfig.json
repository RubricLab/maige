{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"plugins": [{"name": "next"}],
		"types": ["bun-types"]
	},
	"exclude": ["node_modules"],
	"extends": "@rubriclab/typescript-config/nextjs",
	"include": [
		"./src/**/*.ts",
		"./src/**/*.tsx",
		".next/types/**/*.ts",
		"next-env.d.ts"
	]
}
