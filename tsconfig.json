{
	"compilerOptions": {
		"baseUrl": ".",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"paths": {
			"~/*": ["./lib/*"],
			"~/components/*": ["./lib/components/*"]
		},
		"plugins": [{"name": "next"}],
		"types": ["bun-types", "web"]
	},
	"exclude": ["node_modules"],
	"extends": "@rubriclab/typescript-config/nextjs.json",
	"include": [
		"./app/**/*.ts",
		"./app/**/*.tsx",
		"./lib/**/*.ts",
		"./lib/**/*.tsx",
		".next/types/**/*.ts",
		"next-env.d.ts",
		"types/next-auth.d.ts"
	]
}
